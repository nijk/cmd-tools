set number
syntax on
set t_Co=256

set nocompatible
set showmode

set autoindent
set smartindent
set backspace=eol,start,indent

set expandtab
set tabstop=4
set shiftwidth=4
set ruler

set ignorecase
set smartcase
set hlsearch
set backup
set backupdir=~/.vim/tmp/
set nowrap
set laststatus=2
set cmdheight=2
